<h1>All posts</h1>

<table class="table table-bordered">

 <thead>
  <tr>

   <th>Id</th>
   <th>Image</th>
   <th>Title</th>
   <th>Status</th>
   <th>Allow Comments</th>
   <th>Date</th>

  </tr>
 </thead>

 <tbody>

  {{#each posts}}
  <tr>
   <td>{{id}}</td>
   <td><img height="50" width="90" class="mx-auto d-block" src="/uploads/{{file}}" alt=""></td>
   <td>{{title}}</td>
   <td>{{status}}</td>
   <td>{{allowComments}}</td>
   <td>{{generateTime date " MMMM Do YYYY, h:mm:ss a"}}</td>

   <td><a href="/admin/posts/edit/{{id}}" class="btn btn-info">Edit</a></td>

   <td>

    <form action="/admin/posts/{{id}}?_method=DELETE" method="post">

     <button type="submit" class="btn btn-danger">Delete</button>
    </form>

   </td>

  </tr>
  {{/each}}

 </tbody>


</table>